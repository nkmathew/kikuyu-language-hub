<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Flip Delay Slider -->
    <TextView
        android:id="@+id/flipDelayLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flip Delay: 2.0s"
        android:textSize="16sp"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/flipDelaySeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="33"
        android:progressTint="?attr/colorPrimary"
        android:thumbTint="?attr/colorPrimary"
        android:layout_marginBottom="24dp" />

    <!-- Advance Delay Slider -->
    <TextView
        android:id="@+id/advanceDelayLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Card Delay: 4.0s"
        android:textSize="16sp"
        android:textColor="?attr/colorSecondary"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/advanceDelaySeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="33"
        android:progressTint="?attr/colorSecondary"
        android:thumbTint="?attr/colorSecondary"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: Changes will apply to the next slideshow"
        android:textSize="12sp"
        android:textStyle="italic"
        android:gravity="center"
        android:textColor="?attr/colorOnSurfaceVariant" />

</LinearLayout>