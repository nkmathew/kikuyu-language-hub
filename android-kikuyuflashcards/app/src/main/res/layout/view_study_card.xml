<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Card Status and Badges -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Flagged Status Badge -->
            <TextView
                android:id="@+id/flaggedStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background"
                android:padding="6dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:text="ðŸš© Flagged for review"
                tools:visibility="visible" />

            <!-- Known Status Badge -->
            <TextView
                android:id="@+id/knownStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background"
                android:padding="6dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:layout_marginStart="8dp"
                tools:text="âœ“ Known"
                tools:visibility="visible" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Category Badge -->
            <TextView
                android:id="@+id/categoryBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background"
                android:padding="6dp"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                tools:text="ðŸ“š Vocabulary" />

            <!-- Difficulty Badge -->
            <TextView
                android:id="@+id/difficultyBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background"
                android:padding="6dp"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                tools:text="ðŸŸ¢ Beginner" />

            <!-- Quality Badge -->
            <TextView
                android:id="@+id/qualityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quality_badge_background"
                android:padding="4dp"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:visibility="gone"
                tools:text="â˜… 4.5"
                tools:visibility="visible" />
        </LinearLayout>

        <!-- Main Content: Kikuyu and English Stacked Vertically -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Kikuyu Section (First) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorPrimary">

                <TextView
                    android:id="@+id/kikuyuTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimary"
                    android:padding="12dp"
                    android:gravity="start"
                    android:minHeight="48dp"
                    tools:text="Ãšhoro wa rÃºcinÃ­" />

            </androidx.cardview.widget.CardView>

            <!-- English Section (Second) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorSecondary">

                <TextView
                    android:id="@+id/englishTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSecondary"
                    android:padding="12dp"
                    android:gravity="start"
                    android:minHeight="48dp"
                    tools:text="Good morning" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Additional Information -->
        <LinearLayout
            android:id="@+id/additionalInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Context -->
            <LinearLayout
                android:id="@+id/contextContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/contextTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Common greeting used in the morning" />
            </LinearLayout>

            <!-- Cultural Notes -->
            <LinearLayout
                android:id="@+id/culturalNotesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/culturalNotesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Kikuyu greetings vary by time of day" />
            </LinearLayout>

            <!-- Examples -->
            <LinearLayout
                android:id="@+id/examplesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="4dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Examples:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="4dp" />

                <!-- Example items will be added dynamically -->
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons - Subtle Icons Only -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <!-- Known/Unknown Toggle -->
            <TextView
                android:id="@+id/knownButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="â˜"
                android:textSize="24sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/unknownButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="â˜‘"
                android:textSize="24sp"
                android:textColor="@color/success_color"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Copy Button -->
            <ImageView
                android:id="@+id/copyButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_edit"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp"
                android:contentDescription="Copy" />

            <!-- Flag Button -->
            <ImageView
                android:id="@+id/flagButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Flag"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Source Information -->
        <TextView
            android:id="@+id/sourceInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="8dp"
            tools:text="Source: Easy Kikuyu Lessons" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
