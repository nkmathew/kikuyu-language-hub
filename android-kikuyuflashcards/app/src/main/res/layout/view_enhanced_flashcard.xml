<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Category and Difficulty Badges -->
        <LinearLayout
            android:id="@+id/badgeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Category Badge -->
            <TextView
                android:id="@+id/categoryBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background"
                android:padding="8dp"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                tools:text="ðŸ“š Vocabulary" />

            <!-- Difficulty Badge -->
            <TextView
                android:id="@+id/difficultyBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background"
                android:padding="8dp"
                android:textSize="12sp"
                tools:text="ðŸŸ¢ Beginner" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Quality Badge (if available) -->
            <TextView
                android:id="@+id/qualityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quality_badge_background"
                android:padding="4dp"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                tools:text="â˜… 4.5" />
        </LinearLayout>

        <!-- Main Content Area -->
        <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toBottomOf="@id/badgeContainer"
            app:layout_constraintBottom_toTopOf="@id/additionalInfoContainer">

            <!-- English Text (Front Side) -->
            <TextView
                android:id="@+id/englishTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Hello" />

            <!-- Kikuyu Text (Back Side) -->
            <TextView
                android:id="@+id/kikuyuTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="WÄ©mwega" />
        </FrameLayout>

        <!-- Additional Information (shown when flipped) -->
        <LinearLayout
            android:id="@+id/additionalInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/navigationContainer">

            <!-- Context -->
            <LinearLayout
                android:id="@+id/contextContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/contextTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    tools:text="Common greeting used in the morning" />
            </LinearLayout>

            <!-- Cultural Notes -->
            <LinearLayout
                android:id="@+id/culturalNotesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/culturalNotesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    tools:text="Kikuyu greetings vary by time of day" />
            </LinearLayout>

            <!-- Grammatical Info -->
            <LinearLayout
                android:id="@+id/grammaticalInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="4dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/grammaticalInfoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    tools:text="Part of speech: phrase" />
            </LinearLayout>

            <!-- Examples -->
            <LinearLayout
                android:id="@+id/examplesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="4dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Examples:"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <!-- Example items will be added dynamically -->
            </LinearLayout>
        </LinearLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:id="@+id/navigationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/sourceInfoContainer">

            <ImageButton
                android:id="@+id/previousButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_previous"
                android:contentDescription="Previous Card" />

            <ImageButton
                android:id="@+id/flipButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_rotate"
                android:contentDescription="Flip Card" />

            <ImageButton
                android:id="@+id/nextButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_next"
                android:contentDescription="Next Card" />
        </LinearLayout>

        <!-- Source Information -->
        <TextView
            android:id="@+id/sourceInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Source: Easy Kikuyu Lessons" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>